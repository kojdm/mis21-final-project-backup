<h1>Products List</h1>
<%= button_to 'Add Product', new_product_path, method: :get, class: 'btn btn-success btn-lg' %>
<br><br>

<div class="table-responsive">          
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
	<% @products.each do |product| %>
		<% if product.status? %> 
		<tr>
		<% else %>
		<tr class="active">
		<% end %>
			<td><%= product.id %></td>
			<td><%= product.name %></td>
			<td><%= product.price %></td>
			<% if product.status? %>
        <td>Active</td>
      <% else %>
        <td>Inactive</td>
      <% end %>
			<td><%= button_to 'Show', product_path(product), method: :get, class: 'btn btn-default btn-xs' %>
			<td><%= button_to 'Edit', edit_product_path(product), method: :get, class: 'btn btn-default btn-xs' %>
			<% if product.status? %>
			  <td><%= button_to 'Deactivate', deactivate_product_path(product), method: :post, data: {confirm: "Deactivate product \"" + product.name + "\"?"}, class: 'btn btn-danger btn-xs' %>
		  <% else %>
		     <td><%= button_to 'Activate', activate_product_path(product), method: :post, data: {confirm: "Activate product \"" + product.name + "\"?"}, class: 'btn btn-primary btn-xs' %>
		  <% end %>
		</tr>
	<%end %>
    </tbody>
  </table>
</div>
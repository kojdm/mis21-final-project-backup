<div class="jumbotron">
  <div class="container">
    <h3>Admin Sign In</h3>
    <%= simple_form_for(:admin, :url => session_path(:admin)) do |f| %>
      <%= f.input :email, label: false, placeholder: "E-mail" %>
      <%= f.input :password, label: false, placeholder: "Password" %>
      <%= f.submit 'Sign in', class:"btn btn-primary btn-block" %>
    <% end %>
    <br>
    <div style="display: table; margin: 0 auto">
      <%= link_to "Sign in as Cashier", new_user_session_path %>
    </div>
  </div>
</div>
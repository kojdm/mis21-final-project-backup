<h1>Cashiers List</h1>
<%= button_to 'Add Cashier', new_user_path, method: :get, class: 'btn btn-success btn-lg' %>
<br><br>

<div class="table-responsive">          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Status</th>
        <th>Admin</th>
      </tr>
    </thead>
    <tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.name %></td>
			<% if user.status? %>
                <td>Active</td>
            <% else %>
                <td>Inactive</td>
            <% end %>
      <td><%= user.admin.email %></td>
			<td><%= button_to 'Show', user_path(user), method: :get, class: 'btn btn-default btn-xs' %>
			<td><%= button_to 'Edit', edit_user_path(user), method: :get, class: 'btn btn-default btn-xs' %>
			<td><%= button_to 'Delete', user_path(user), method: :delete, data: {confirm: "Delete cashier \"" + user.name + "\"?"}, class: 'btn btn-danger btn-xs' %>
		</tr>
	<%end %>
    </tbody>
  </table>
</div>
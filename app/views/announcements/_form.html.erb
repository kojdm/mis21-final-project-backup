<style>
    .area-sizing {
        resize: none;
        width: 100%;
        height: 300px;
    }
    
    .simple_form div.input {
        width: 100%;
        height: 300px;
    }
</style>

<%= simple_form_for @announcement do |f| %>
    <%= f.input :subject %>
    <%= f.input :content, as: :text, input_html: {rows: 13} %>
    <%= f.submit "Send", class: "btn btn-primary btn-lg" %>
<% end %>